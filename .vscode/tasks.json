{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "presentation": {
        "echo": false,
        "reveal": "always",
        "focus": true,
        "panel": "new",
        "showReuseMessage": true,
        "clear": true,
    },
    "tasks": [
        {
            "label": "Menuconfig",
            "type": "shell",
            "problemMatcher": [],
            "windows": {
                "command": "sh scripts/Menuconfig.sh",
            },
        },
        {
            "label": "Defconfig",
            "type": "shell",
            "problemMatcher": [],
            "windows": {
                "command": "make defconfig",
            },
        },
        {
            "label": "Build test",
            "type": "shell",
            "problemMatcher": [],
            "windows": {
                "command": "export testNumber=\"${input:testNumber}\" && export coresNumber=\"${input:coresNumber}\" && sh scripts/BuildTest.sh",
            },
        },
        {
            "label": "Flash",
            "type": "shell",
            "problemMatcher": [],
            "windows": {
                "command": "make flash ESPPORT=${input:serialPort}",
            },
        },
        {
            "label": "Monitor",
            "type": "shell",
            "problemMatcher": [],
            "windows": {
                "command": "make monitor ESPPORT=${input:serialPort}",
            },
        },
    ],
    "inputs": [
        {
            "id": "testNumber",
            "type": "promptString",
            "description": "Test number to be used"
        },
        {
            "id": "coresNumber",
            "type": "promptString",
            "description": "Number of cores to be used"
        },
        {
            "id": "serialPort",
            "type": "promptString",
            "description": "Serial port name to be used"
        },
    ]
}