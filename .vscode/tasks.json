{
    "version": "2.0.0",
    "presentation": {
        "echo": false,
        "reveal": "always",
        "focus": true,
        "panel": "new",
        "showReuseMessage": true,
        "clear": true
    },
    "tasks": [
        {
            "label": "Menuconfig",
            "type": "shell",
            "problemMatcher": [],
            "windows": {
                "command": "sh scripts/Menuconfig.sh"
            }
        },
        {
            "label": "Defconfig",
            "type": "shell",
            "problemMatcher": [],
            "windows": {
                "command": "make defconfig"
            }
        },
        {
            "label": "Generate test list",
            "presentation": {
                "reveal": "never",
                "panel": "dedicated",
                "showReuseMessage": false,
                "clear": true
            },
            "isBackground": true,
            "type": "shell",
            "windows": {
                "command": "sh scripts/GenerateTestList.sh"
            },
            "problemMatcher": []
        },
        {
            "label": "Generate thread list",
            "presentation": {
                "reveal": "never",
                "panel": "dedicated",
                "showReuseMessage": false,
                "clear": true
            },
            "isBackground": true,
            "type": "shell",
            "windows": {
                "command": "sh scripts/GenerateThreadList.sh"
            },
            "problemMatcher": []
        },
        {
            "label": "Build test",
            "type": "shell",
            "problemMatcher": [],
            "windows": {
                "command": "export testFile=\"${input:testFile}\" && export threadsNumber=\"${input:threadsNumber}\" && sh scripts/BuildTest.sh"
            },
            "dependsOn":[
                "Generate test list",
                "Generate thread list"
            ],
            "dependsOrder": "sequence"
        },
        {
            "label": "Flash",
            "type": "shell",
            "problemMatcher": [],
            "windows": {
                "command": "make flash ESPPORT=${input:serialPort}"
            }
        },
        {
            "label": "Monitor",
            "type": "shell",
            "problemMatcher": [],
            "windows": {
                "command": "make monitor ESPPORT=${input:serialPort}"
            }
        },
        {
            "label": "Flash & Monitor",
            "type": "shell",
            "problemMatcher": [],
            "windows": {
                "command": "make flash monitor ESPPORT=${input:serialPort}"
            }
        },
        {
            "label": "Clean",
            "type": "shell",
            "problemMatcher": [],
            "windows": {
                "command": "make clean"
            }
        },
        {
            "label": "Create new component",
            "type": "shell",
            "problemMatcher": [],
            "windows": {
                "command": "export componentName=${input:componentName} && sh scripts/CreateNewComponent.sh"
            }
        },
        {
            "label": "Remove auto-generated files",
            "type": "shell",
            "problemMatcher": [],
            "windows": {
                "command": "sh scripts/RemoveAutogen.sh"
            }
        }
    ],
    "inputs": [
        {
            "type": "pickString",
            "description": "Test number to be used",
            "id": "testFile",
			"options": [
            ]
        },
        {
            "type": "pickString",
            "description": "Number of threads to be used",
            "id": "threadsNumber",
			"options": [
            ]
        },
        {
            "id": "serialPort",
            "type": "promptString",
            "description": "Serial port name to be used"
        },
        {
            "id": "componentName",
            "type": "promptString",
            "description": "New component name"
        }
    ]
}
